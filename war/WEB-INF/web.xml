<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">


	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error404.jsp</location>
	</error-page> 
	
	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/jsp/error403.jsp</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/throwableerror.jsp</location>
	</error-page>

	<servlet>
		<servlet-name>mainpage</servlet-name>
		<jsp-file>/index.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>useredit</servlet-name>
		<jsp-file>/users/edituser.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>userprofile</servlet-name>
		<jsp-file>/users/profile.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>userdesc</servlet-name>
		<jsp-file>/users/memberprofile.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>t41</servlet-name>
		<jsp-file>/WEB-INF/jsp/events/t41.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>swiss2010</servlet-name>
		<jsp-file>/WEB-INF/jsp/events/rwswiss2010.jsp</jsp-file>
	</servlet>		
	<servlet>
		<servlet-name>swiss</servlet-name>
		<jsp-file>/WEB-INF/jsp/events/rwswiss.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>archive</servlet-name>
		<jsp-file>/WEB-INF/jsp/archive.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>viewer</servlet-name>
		<jsp-file>/WEB-INF/jsp/viewer.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>net.rwchess.site.servlets.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>import</servlet-name>
		<servlet-class>net.rwchess.site.servlets.Import</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>post</servlet-name>
		<servlet-class>net.rwchess.site.servlets.PostMessage</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>fileUpload</servlet-name>
		<servlet-class>net.rwchess.site.servlets.FileUpload</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>submembrs</servlet-name>
		<servlet-class>net.rwchess.site.servlets.SubmitMember</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>userdelete</servlet-name>
		<servlet-class>net.rwchess.site.servlets.UserDelete</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>fileDownld</servlet-name>
		<servlet-class>net.rwchess.site.servlets.FileDownload</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>wiki</servlet-name>
		<servlet-class>net.rwchess.site.servlets.Wiki</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>check</servlet-name>
		<servlet-class>net.rwchess.site.servlets.CheckOutTl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>signtl</servlet-name>
		<servlet-class>net.rwchess.site.servlets.TlSignup</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>signswiss</servlet-name>
		<servlet-class>net.rwchess.site.servlets.SwissSignup</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>changepasswd</servlet-name>
		<servlet-class>net.rwchess.site.servlets.ChangePassword</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>addmember</servlet-name>
		<servlet-class>net.rwchess.site.servlets.AddMember</servlet-class>
	</servlet>


	<filter>
		<filter-name>authorizationFilter</filter-name>
		<filter-class>net.rwchess.site.AuthorizationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>authorizationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet-mapping>
		<servlet-name>userdesc</servlet-name>
		<url-pattern>/members/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>fileDownld</servlet-name>
		<url-pattern>/files/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>useredit</servlet-name>
		<url-pattern>/users/edit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userprofile</servlet-name>
		<url-pattern>/users/profile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userdelete</servlet-name>
		<url-pattern>/actions/userdelete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>fileUpload</servlet-name>
		<url-pattern>/actions/upload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>import</servlet-name>
		<url-pattern>/actions/import</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/actions/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>post</servlet-name>
		<url-pattern>/actions/post</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>changepasswd</servlet-name>
		<url-pattern>/actions/changepasswd</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addmember</servlet-name>
		<url-pattern>/actions/addmember</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>submembrs</servlet-name>
		<url-pattern>/actions/admin/submembrs</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>wiki</servlet-name>
		<url-pattern>/wiki/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>mainpage</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>check</servlet-name>
		<url-pattern>/special/check</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>t41</servlet-name>
		<url-pattern>/t41</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>signtl</servlet-name>
		<url-pattern>/actions/signtl</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>signswiss</servlet-name>
		<url-pattern>/actions/signswiss</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>swiss</servlet-name>
		<url-pattern>/swiss</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>archive</servlet-name>
		<url-pattern>/archive</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>viewer</servlet-name>
		<url-pattern>/viewer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>swiss2010</servlet-name>
		<url-pattern>/swiss2010</url-pattern>
	</servlet-mapping>
	
</web-app>
